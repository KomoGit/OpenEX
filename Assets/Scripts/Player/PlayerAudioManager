using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class PlayerAudioManager : MonoBehaviour
{
    [Header("References")]
    [HideInInspector] public AudioSource footstepAudioSource = default;
    PlayerMovement pm;

    [Header("Values")]
    [SerializeField] private float baseStepSpeed = 0.5f;
    [SerializeField] private float crouchStepMultiplier = 1.5f;
    [SerializeField] private float sprintStepMultiplier = 0.3f;

    [Header("Sound Files")]
    [Header("Footsteps - Default")]
    [SerializeField] public AudioClip[] defaultClips = default;
    [Header("Footsteps - All Other")]
    [SerializeField] public AudioClip[] woodClips = default;
    [SerializeField] public AudioClip[] grassClips = default;
    [SerializeField] public AudioClip[] mudClips = default;
    [SerializeField] public AudioClip[] metalClips = default;
    [Header("Jump and Land")]
    [SerializeField] public AudioClip JumpSound = default;
    [SerializeField] public AudioClip LandSound = default;

    private void Awake()
    {
        pm = FindObjectOfType<PlayerMovement>();
        footstepAudioSource = FindObjectOfType<AudioSource>();
    }

    [HideInInspector] public float footstepTimer = 0f;
    public float GetCurrentOffset => pm.isCrouching ? baseStepSpeed * crouchStepMultiplier : pm.isSprinting ? baseStepSpeed * sprintStepMultiplier : /*pm.isWallrunning ? baseStepSpeed * wallrunStepMultiplier :*/ baseStepSpeed;
}
